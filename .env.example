# Application
APP_NAME=Sanaa AI
APP_URL=https://ai.sanaa.co
APP_SECRET=CHANGE_THIS_RANDOM_SECRET_64_CHARS
APP_ENV=production
APP_DEBUG=false

# Database
DATABASE_URL=postgresql://antigravity:CHANGE_THIS_STRONG_PASSWORD@localhost:5432/antigravity_db

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# LLM Configuration (tiered - local first, cloud for complex)
# Local model via Ollama (free, always available)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# Cloud fallback (for complex tasks - use sparingly)
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# OPENAI_API_KEY=sk-your-key-here
# OPENROUTER_API_KEY=sk-or-your-key-here

# Default LLM strategy: local | cloud | auto
LLM_STRATEGY=auto

# Email Alerts (SMTP)
SMTP_HOST=mail.example.com
SMTP_PORT=587
SMTP_USER=alert@example.com
SMTP_PASS=CHANGE_THIS_PASSWORD
SMTP_FROM=Sanaa AI <alert@example.com>
ALERT_RECIPIENTS=you@example.com

# Email Inbox Monitoring (IMAP)
IMAP_HOST=mail.example.com
IMAP_PORT=993
IMAP_USER=alert@example.com
IMAP_PASS=CHANGE_THIS_PASSWORD

# Sanaa Ecosystem URLs to monitor
MONITOR_URLS=https://cards.sanaa.ug,https://fx.sanaa.co,https://soko.sanaa.ug,https://sanaa.co,https://ai.sanaa.co

# Server monitoring thresholds
CPU_ALERT_THRESHOLD=85
RAM_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
LOAD_ALERT_THRESHOLD=4.0

# Mac Client API Key
MAC_CLIENT_API_KEY=CHANGE_THIS_RANDOM_API_KEY

# Admin Auth
ADMIN_EMAIL=admin@ai.sanaa.co
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# Timezone
TZ=Africa/Kampala
