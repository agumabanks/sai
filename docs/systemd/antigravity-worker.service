# /etc/systemd/system/antigravity-worker.service
[Unit]
Description=Sanaa AI Celery Worker
After=redis-server.service

[Service]
Type=exec
User=root
Group=antigravity
WorkingDirectory=/opt/antigravity/core
Environment="PATH=/opt/antigravity/venv/bin:/usr/bin"
EnvironmentFile=/opt/antigravity/.env
ExecStart=/opt/antigravity/venv/bin/celery -A tasks worker --loglevel=info --concurrency=2
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
